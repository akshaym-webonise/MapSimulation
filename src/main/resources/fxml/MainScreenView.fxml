<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.webonise.controllers.MainScreenController" spacing="8">
    <padding>
        <Insets left="5.0" right="5.0" top="5.0" bottom="5.0"/>
    </padding>

    <children>
        <VBox spacing="8">
            <children>
                <TableView fx:id="tableView" minWidth="300" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="150" text="Latitude" fx:id="latColumn"/>
                        <TableColumn prefWidth="150" text="Longitude" fx:id="lngColumn"/>
                    </columns>
                </TableView>
                <Button fx:id="clearButton" text="Clear Selection" onAction="#clearTheMap"/>
            </children>
        </VBox>
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <children>
                <ProgressBar fx:id="progressBar" maxWidth="Infinity"/>
                <WebView fx:id="mapBrowser" VBox.vgrow="ALWAYS"/>
            </children>
        </VBox>
    </children>
</HBox>